<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvClosedDate"/>

    <TextView
        android:id="@+id/tvTitleHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivUserImage"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Title:"
        app:layout_goneMarginStart="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvTitleHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="2"
        app:layout_goneMarginStart="3dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"/>
    <TextView
        android:id="@+id/tvUserNameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvTitleHeading"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:text="Name:"/>
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvUserNameHeader"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:id="@+id/tvCreatedDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvTitleHeading"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:text="Created date:"/>
    <TextView
        android:id="@+id/tvCreatedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvCreatedDateTitle"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"
        android:layout_marginEnd="2dp"/>
    <TextView
        android:id="@+id/tvClosedDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvTitleHeading"
        app:layout_constraintTop_toBottomOf="@id/tvCreatedDate"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:text="Closed date:"/>
    <TextView
        android:id="@+id/tvClosedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvClosedDateTitle"
        app:layout_constraintTop_toBottomOf="@id/tvCreatedDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>